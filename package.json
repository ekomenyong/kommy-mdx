		"next-contentlayer": "^0.2.4",
		"next-plausible": "^3.1.9",
		"next-seo": "^5.4.0",
		"next-themes": "^0.1.1",
		"preact": "^10.7.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-icons": "^4.3.1",
		"reading-time": "^1.5.0",
		"sharp": "^0.30.4"
